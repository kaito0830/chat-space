  .chat--main__message__form
    .chat--main__message__form__box
      .chat--main__message--form__box--message
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'chat--main__message--form__box--message--form', placeholder: 'type a message' do
            = f.label :image, class: 'chat--main__message__form__box--message--img' do
              =icon('fas', 'image')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit' 
    